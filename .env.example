# SuperClaude Project Configuration
# Copy this file to .env and customize for your project
# Make sure .env is in your .gitignore!

# Documentation Format
# Set to true to use Org-mode format for all documentation (except README.md)
SUPERCLAUDE_ORG_MODE=false

# Explicitly use Markdown format (default)
SUPERCLAUDE_MD=true

# Enable/disable automatic journal updates (default: true)
SUPERCLAUDE_JOURNAL=true

# MCP Server Configuration
# Configure which MCP servers are enabled by default for this project

# Enable all MCP servers
SUPERCLAUDE_MCP_ALL=false

# Disable all MCP servers (use native tools only)
SUPERCLAUDE_NO_MCP=false

# Individual MCP server controls
SUPERCLAUDE_MCP_C7=true          # Context7 documentation lookup
SUPERCLAUDE_MCP_SEQ=false        # Sequential thinking analysis
SUPERCLAUDE_MCP_MAGIC=true       # Magic UI component generation
SUPERCLAUDE_MCP_PUP=false        # Puppeteer browser automation

# Default Thinking Mode
# Options: normal, hard, ultra
SUPERCLAUDE_THINK=normal

# Enable UltraCompressed mode by default
SUPERCLAUDE_ULTRACOMPRESSED=false

# Default Persona
# Options: architect, frontend, backend, analyzer, security, mentor, refactorer, performance, qa
# Leave empty for no default persona
SUPERCLAUDE_PERSONA=

# Quality Settings
SUPERCLAUDE_VALIDATE=false       # Enhanced pre-execution safety checks
SUPERCLAUDE_STRICT=false         # Zero-tolerance mode with enhanced validation

# Task Mode Settings
SUPERCLAUDE_TASK_MODE_STRICT=true    # Enforce strict separation between define/work modes
SUPERCLAUDE_AUTO_SAVE_TASKS=false    # Automatically save task definitions

# Roadmap Settings
SUPERCLAUDE_ROADMAP_FOLDER=roadmap/  # Folder containing milestone files

# Example project-specific configurations:

# For an Emacs-based project:
# SUPERCLAUDE_ORG_MODE=true
# SUPERCLAUDE_MD=false

# For a frontend project:
# SUPERCLAUDE_MCP_MAGIC=true
# SUPERCLAUDE_PERSONA=frontend

# For a security-critical project:
# SUPERCLAUDE_VALIDATE=true
# SUPERCLAUDE_STRICT=true
# SUPERCLAUDE_PERSONA=security